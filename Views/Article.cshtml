@using Umbraco.Extensions
@using AbraContentSite.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ArticleViewModel>

@{
    Layout = "Master.cshtml";
    ViewData["Title"] = Model.Title;
}

<article class="card hero">
    <header>
        <h1>@Model.Title</h1>
        @if (!string.IsNullOrWhiteSpace(Model.AuthorName))
        {
            <p class="author">By @Model.AuthorName</p>
        }
    </header>

    @if (Model.HeroImage is not null)
    {
        <img src="@Model.HeroImage.Url()" alt="@Model.Title" />
    }

    @if (!string.IsNullOrWhiteSpace(Model.ContentHtml))
    {
        @Html.Raw(Model.ContentHtml)
    }
</article>